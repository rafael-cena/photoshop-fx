<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fotoxopfx.MainController">
   <center>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox maxHeight="60.0" prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: darkgray;" BorderPane.alignment="CENTER">
         <children>
            <MenuBar style="-fx-background-color: #f8f9fa;">
              <menus>
                <Menu text="_Arquivo">
                  <items>
                        <MenuItem onAction="#onAbrir" text="_Abrir...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem onAction="#onSalvar" text="_Salvar">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem onAction="#onSalvarComo" text="Salvar _como...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem onAction="#onSair" text="Sai_r">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="_Transformações">
                  <items>
                    <MenuItem onAction="#onTonsCinza" text="_Tons de Cinza" />
                        <MenuItem mnemonicParsing="false" onAction="#onPretoBranco" text="Preto e Branco" />
                        <MenuItem mnemonicParsing="false" onAction="#onEpelharHorizontal" text="Espelhar Horizontal" />
                        <Menu mnemonicParsing="false" text="ImageJ">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#onDetectarBordas" text="Detectar Bordas" />
                          </items>
                        </Menu>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Sobre" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar minHeight="75.0" prefHeight="75.0" prefWidth="800.0" style="-fx-background-color: darkgray;">
              <items>
                <Button maxHeight="64.0" maxWidth="64.0" minHeight="64.0" minWidth="64.0" mnemonicParsing="false" onAction="#onAbrir" style="-fx-background-image: url('open_icon.png'); -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-color: transparent;" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
</BorderPane>
